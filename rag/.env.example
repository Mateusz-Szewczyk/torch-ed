# =============================================================================
# RAG Service Environment Configuration
# =============================================================================

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/torched

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# ChromaDB Configuration
# Local development (default)
PERSIST_DIRECTORY=/app/vector_store_data

# Production (Railway - uncomment these for remote ChromaDB)
# CHROMA_HOST=chromadb.railway.internal
# CHROMA_PORT=8000
# CHROMA_PRIVATE_URL=http://chromadb.railway.internal
# CHROMA_PUBLIC_URL=https://chromadb-xxx.up.railway.app

# Redis (for caching)
REDIS_URL=redis://localhost:6379

# =============================================================================
# Cloudflare R2 Storage Configuration
# =============================================================================
# Set USE_R2_STORAGE=true to enable R2 for image storage (production)
# Leave as false for local development (images stored in static/document_images/)

USE_R2_STORAGE=false

# Required when USE_R2_STORAGE=true:
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=torched-workspace-images

# Optional: Public URL for serving images (if using custom domain)
# R2_PUBLIC_URL=https://images.yourdomain.com

# Local storage path (used when USE_R2_STORAGE=false)
LOCAL_STORAGE_PATH=static/document_images

# =============================================================================
# Authentication
# =============================================================================
JWT_SECRET_KEY=your_jwt_secret_key_here

# =============================================================================
# Stripe (Payments)
# =============================================================================
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
STRIPE_PRICE_ID_PRO=price_xxx
STRIPE_PRICE_ID_EXPERT=price_yyy

# =============================================================================
# Other Configuration
# =============================================================================
LLM_MODEL_NAME=claude-3-haiku-20240307
ENVIRONMENT=development

